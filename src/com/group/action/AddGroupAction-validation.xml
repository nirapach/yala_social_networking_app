<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
	<field name="group.groupName">
	    <field-validator type="regex">
	    	<param name="expression">^[a-zA-Z][a-zA-z0-9_-]{1,9}$</param>
	        <message>Username should be 3 to 15 characters long. Accepted characters: digits, letters, underscore, hyphen</message>
	    </field-validator>
	</field>
</validators>